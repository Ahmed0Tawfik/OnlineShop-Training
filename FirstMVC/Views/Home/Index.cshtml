@using FirstMVC.ViewModel
@{
    ViewData["Title"] = "Home Page";
}

@model HomeViewModel

@section Categories{
    @foreach (var item in Model.Categories)
    {
        <a asp-controller="Product" asp-action="GetProductsByCategory" asp-route-id="@item.ID">@item.Name</a>
    }
}

@section Products{
        @foreach (var item in Model.FeaturedProducts)
        {
        <div class="col-4">

            <a asp-controller="Product" asp-action="GetProductByID" asp-route-id="@item.ID">

                <img src="/Images/@item.Image" />
            </a>

            <h3>@item.Name</h3>
            <p>$@item.Price </p>
            <p>
                In Stock : @item.Quantity
            </p>

        </div>
        }
}


<div class="row">
    <div class="col-2">
        <h1> A New Style!</h1>

        <a asp-controller="Product" asp-action="Index" class="btn">Explore Now &#8594;</a>
    </div>

    <div class="col-2">
        <img src="images/image1.png">
    </div>

</div>