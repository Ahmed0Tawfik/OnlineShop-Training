@model FirstMVC.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h2 class="title">Register</h2>

        <form asp-action="SaveRegister">
    <div asp-validation-summary="All" class="text-danger" style="color: red"></div>
    <div>
        <label asp-for="FName" class="control-label"></label>
        <input placeholder="First name" asp-for="FName" class="form-control" />
    </div>
    <div>
        <label asp-for="LName" class="control-label"></label>
        <input placeholder="Last name" asp-for="LName" class="form-control" />
    </div>
            <div >
                <label asp-for="UserName" class="control-label"></label>
                <input placeholder="Username" asp-for="UserName" class="form-control" />
            </div>

            <div >
                <label asp-for="Email" class="control-label"></label>
        <input placeholder="Email" asp-for="Email" class="form-control" />
            </div>
            <div >
                <label asp-for="Password" class="control-label"></label>
        <input placeholder="Password" asp-for="Password" class="form-control" />
            </div>
            <div >
                <label asp-for="ConfirmedPassword" class="control-label"></label>
        <input placeholder="Confirm Password" asp-for="ConfirmedPassword" class="form-control" />
            </div>
            <div>
                <label asp-for="Address" class="control-label"></label>
        <input placeholder="Address" asp-for="Address" class="form-control" />
            </div>
            <div >
                <label asp-for="PhoneNumber" class="control-label"></label>
        <input placeholder="Phonenumber" asp-for="PhoneNumber" class="form-control" />
            </div>
            <div >
                <input class="btn" type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="regdiv">
                <a class="btnreg" asp-controller="Account" asp-action="Login">Login</a>
            </div>
        </form>
    
